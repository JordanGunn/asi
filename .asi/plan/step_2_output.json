{
  "step": 2,
  "output": {
    "scripts": [
      {"name": "init.sh", "purpose": "Create new plan with name and initial structure", "inputs": "--name <plan-name> [--force]", "outputs": ".plan/active.yaml, .plan/active/STATE.json"},
      {"name": "add-step.sh", "purpose": "Add a step to the active plan", "inputs": "--step <description> [--after <step-id>]", "outputs": "Updated .plan/active.yaml"},
      {"name": "update-status.sh", "purpose": "Update step status", "inputs": "--step <step-id> --status <pending|in_progress|done|skipped>", "outputs": "Updated .plan/active.yaml, STATE.json log entry"},
      {"name": "status.sh", "purpose": "Display current plan status", "inputs": "[--format <json|text>]", "outputs": "Plan summary to stdout"},
      {"name": "archive.sh", "purpose": "Archive completed plan and clear active", "inputs": "[--force]", "outputs": ".plan/archive/<timestamp>/"},
      {"name": "validate.sh", "purpose": "Validate plan schema and structure", "inputs": "--check <prereqs|schema|steps|all>", "outputs": "Validation result to stdout"}
    ]
  }
}
