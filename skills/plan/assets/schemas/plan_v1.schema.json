{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "plan_v1.schema.json",
  "title": "Active Plan",
  "description": "Schema for .plan/active.yaml",
  "type": "object",
  "required": ["name", "created_at", "status", "steps"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Plan name",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 creation timestamp"
    },
    "status": {
      "type": "string",
      "enum": ["active", "completed", "archived"],
      "description": "Plan status"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description", "status"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^S[0-9]{3}$",
            "description": "Step ID (S001, S002, etc.)"
          },
          "description": {
            "type": "string",
            "description": "Step description"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "in_progress", "done", "skipped"],
            "description": "Step status"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "completed_at": {
            "type": "string",
            "format": "date-time"
          },
          "sub_steps": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "description", "status"],
              "properties": {
                "id": { "type": "string" },
                "description": { "type": "string" },
                "status": { "type": "string", "enum": ["pending", "in_progress", "done", "skipped"] }
              }
            },
            "description": "Optional sub-steps"
          }
        }
      }
    }
  }
}
