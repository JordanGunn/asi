{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Plan Artifact Schema",
  "description": "Schema for PLAN.md frontmatter",
  "type": "object",
  "required": ["description", "timestamp", "status", "source_kickoff", "source_kickoff_hash", "skill_name"],
  "properties": {
    "description": {
      "type": "string",
      "description": "One-line summary of the plan"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 creation timestamp"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "rejected"],
      "description": "Artifact lifecycle status"
    },
    "source_kickoff": {
      "type": "string",
      "description": "Path to source KICKOFF.md",
      "minLength": 1
    },
    "source_kickoff_hash": {
      "type": "string",
      "description": "SHA-256 hash of source KICKOFF.md for change detection",
      "pattern": "^[a-f0-9]{64}$"
    },
    "skill_name": {
      "type": "string",
      "description": "Target skill being planned"
    }
  },
  "additionalProperties": false
}
