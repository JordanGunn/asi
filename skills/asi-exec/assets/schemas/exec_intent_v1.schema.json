{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Exec Intent Schema",
  "description": "Schema for asi-exec skill intent contract",
  "type": "object",
  "required": ["source_plan", "source_todo"],
  "properties": {
    "source_plan": {
      "type": "string",
      "description": "Path to approved PLAN.md",
      "minLength": 1
    },
    "source_todo": {
      "type": "string",
      "description": "Path to TODO.md",
      "minLength": 1
    },
    "task_filter": {
      "type": "string",
      "description": "Optional: specific task ID to execute (e.g., T001)"
    },
    "dry_run": {
      "type": "boolean",
      "description": "If true, report what would be done without executing",
      "default": false
    }
  },
  "additionalProperties": false
}
