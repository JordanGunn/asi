{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Grouped Skill Scaffold",
  "description": "Scaffolding artifact for a grouped skill set. Produces SCAFFOLD.json artifact.",
  "type": "object",
  "required": ["prefix", "target_directory", "sub_skills", "inference_log"],
  "properties": {
    "prefix": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Common prefix for all sub-skills"
    },
    "target_directory": {
      "type": "string",
      "description": "Base directory where skill group will be created"
    },
    "sub_skills": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "object",
        "required": ["name", "verb", "purpose", "structure"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9-]*$",
            "description": "Full skill name: <prefix>-<verb>"
          },
          "verb": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9-]*$",
            "description": "Action verb (e.g., forge, step, exec)"
          },
          "purpose": {
            "type": "string",
            "minLength": 1,
            "description": "What this sub-skill does"
          },
          "structure": {
            "type": "object",
            "required": ["directories", "files"],
            "properties": {
              "directories": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "files": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["path", "template"],
                  "properties": {
                    "path": {
                      "type": "string"
                    },
                    "template": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      },
      "description": "List of sub-skills in this group"
    },
    "shared_files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "template"],
        "properties": {
          "path": {
            "type": "string"
          },
          "template": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "description": "Files at the group root level (README.md, bootstrap scripts)"
    },
    "inference_log": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["field", "value", "source"],
        "properties": {
          "field": {
            "type": "string",
            "description": "Which field was inferred"
          },
          "value": {
            "type": "string",
            "description": "The inferred value"
          },
          "source": {
            "type": "string",
            "enum": ["user_explicit", "user_implicit", "agent_derived"],
            "description": "How the value was determined"
          },
          "rationale": {
            "type": "string",
            "description": "Why this value was chosen (required if agent_derived)"
          }
        },
        "additionalProperties": false
      },
      "description": "Audit log of all inferred values"
    }
  },
  "additionalProperties": false
}
